# minimal i3 configurations
# GRUVBOX theme colors are set at the end

# Set mod keys (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# terminal
# bindsym $mod+Return exec --no-startup-id urxvt
bindsym $mod+Return exec --no-startup-id alacritty
# terminal
bindsym $mod+shift+Return exec --no-startup-id ~/.config/i3/shell.sh
# rofi
bindsym $mod+space exec --no-startup-id rofi -show run
# bitwarden menu https://github.com/mattydebie/bitwarden-rofi
bindsym $mod+p exec --no-startup-id bwmenu
# kill container
bindsym $mod+Down kill

# restart i3 inplace 
bindsym $mod+r restart
# exit i3
# bindsym $mod+Control+Escape exec i3-msg exit
# kill xorg server
# bindsym $mod+Shift+Escape exec pkill -15 Xorg

# screenshot printscreen to ~/home
bindsym Print exec --no-startup-id scrot

# open luakit web browser
bindsym $mod+b exec --no-startup-id luakit

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# vim key navigations
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Control+h move left
bindsym $mod+Control+j move down
bindsym $mod+Control+k move up
bindsym $mod+Control+l move right

# new window split direction toggle
bindsym $mod+t split toggle

# scratchpad
bindsym $mod+o scratchpad show
bindsym $mod+shift+o move scratchpad

# floating windows
floating_modifier $mod
bindsym $mod+Ctrl+f floating toggle

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# workspace names / font-awesome
set $ws1 "01 "
set $ws2 "02 "
set $ws3 "03 "
set $ws4 "04 "
set $ws5 "05 "
set $ws6 "06 "
set $ws7 "07 "
set $ws8 "08 "
set $ws9 "09 "
set $wsX "10 "

# next/previous workspace
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $wsX

#switch to next/prev workspace
bindsym $mod+shift+h workspace prev
bindsym $mod+shift+l workspace next

# move focused container to workspace
bindsym $mod+Control+1 move container to workspace $ws1
bindsym $mod+Control+2 move container to workspace $ws2
bindsym $mod+Control+3 move container to workspace $ws3
bindsym $mod+Control+4 move container to workspace $ws4
bindsym $mod+Control+5 move container to workspace $ws5
bindsym $mod+Control+6 move container to workspace $ws6
bindsym $mod+Control+7 move container to workspace $ws7
bindsym $mod+Control+8 move container to workspace $ws8
bindsym $mod+Control+9 move container to workspace $ws9
bindsym $mod+Control+0 move container to workspace $wsX

# move focused workspace between monitors
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

# Pulse Audio volume keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Screen brightness keys
# (This should work for both acpilight or xbacklight.)
bindsym XF86MonBrightnessUp exec light -A 5 
bindsym XF86MonBrightnessDown exec light -U 5

set $keyboard_layout Keyboard Layout: (f) French, (e) US English
mode "$keyboard_layout" {

  bindsym f exec --no-startup-id setxkbmap -option -option compose:rctrl fr,mode "default"
  bindsym e exec --no-startup-id setxkbmap -option -option compose:ralt us,mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+shift+Z mode "$keyboard_layout"

# redshift modes
bindsym $mod+shift+r mode "$mode_redshift"
set $mode_redshift Set colour temperature: (a)uto, (r)eset, (2)500K, (3)500K, (4)500K, (5)500K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym a exec --no-startup-id "$kill_redshift redshift -P -t 5500:3500", mode "default"
    bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 2500", mode "default"
    bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 3500", mode "default"
    bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 4500", mode "default"
    bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 5500", mode "default"
 
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# exit modes
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.config/i3/exit.sh lock, mode "default"
    bindsym e exec --no-startup-id ~/.config/i3/exit.sh logout, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.config/i3/exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"

# autostart redshift
exec --no-startup-id /usr/libexec/geoclue-2.0/demos/agent
exec --no-startup-id redshift
# now i'm using nmcli
# exec --no-startup-id nm-applet --sm-disable
exec --no-startup-id flameshot

